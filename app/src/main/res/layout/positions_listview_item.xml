<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="86dp"
    android:paddingLeft="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/positionNameTextView"
        android:text="positionNameTextView"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="teamTitleTextView"
        android:id="@+id/teamTitleTextView"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_below="@+id/positionNameTextView"
        android:layout_toRightOf="@+id/textView8"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="in"
        android:id="@+id/textView8"
        android:textSize="17dp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/positionNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="startEndDateTextView"
        android:id="@+id/startEndDateTextView"
        android:layout_below="@+id/teamTitleTextView"
        android:layout_alignParentLeft="true"
        android:textSize="17dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="3dp" />
</RelativeLayout>